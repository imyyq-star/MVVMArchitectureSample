<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.imyyq.sample">

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NetworkActivity" />
        <!-- 要想实现侧滑返回，activity的背景必须透明 -->
        <activity android:name=".BasicActivity" android:theme="@style/AppTheme.Translucent"/>
        <activity android:name=".ListViewActivity" />
        <activity android:name=".loadsir.LoadSirActivity" />
        <activity android:name=".rv.RecyclerViewActivity" />
        <activity android:name=".vp.ViewPagerActivity" />
        <activity android:name=".vp.ViewPager2Activity" />
        <activity android:name=".db.DBActivity" />
        <activity android:name=".nav.NavActivity" />
    </application>

</manifest>